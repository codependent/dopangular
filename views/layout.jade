            div(class="mdl-textfield__expandable-holder")
              input(class="mdl-textfield__input" type="text" name="sample" id="fixed-header-drawer-exp")
                
      mdl-nav-menu(class="mdl-layout__drawer")
        mdl-nav-menu-item(text="Angular" href="https://angular.io")
        mdl-nav-menu-item(text="Express" href="https://expressjs.com")
        mdl-nav-menu-item(text="Material Design Lite" href="http://www.getmdl.io/")
      
      div(class="demo-ribbon")
      main(class="demo-main mdl-layout__content")
         <!-- Your content goes here  -->
         block content 
  
  script.
    System.import('angular/app');